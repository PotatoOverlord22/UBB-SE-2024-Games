<UserControl x:Class="GameWorld.Views.RollButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameWorld.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Width="150" Height="120" Background="Red"  Click="Button_Click">
        <Border  >

            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="5" Opacity="0.7"/>
            </Border.Effect>

            <TextBlock FontSize="30"  Foreground="White" FontWeight="Bold" >
        ROLL

            </TextBlock>


        </Border>
    </Button>
</UserControl>
